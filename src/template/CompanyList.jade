include ./header.jade

h1 Alle Unternehmen (#{data.companies.length})

if status == 'success.delete'
	p.success Das Unternehmen wurde erfolgreich gelöscht.

div.button
	a(href="/CompanyAdd?sessionId=#{sessionId}") Neues Unternehmen anlegen

table
	thead
		tr
			th Name
			th(colspan="2") Aktionen
	tbody
		each company in data.companies
			tr
				td #{company.name}
				td
					a(href="/CompanyEdit?sessionId=#{sessionId}&companyId=#{company._id}") Bearbeiten
				td
					a(href="/CompanyDelete?sessionId=#{sessionId}&companyId=#{company._id}") Löschen